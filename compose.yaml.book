services:
  backend:
    container_name: book_backend
    build: .
    ports:
      - "6180:6180"
    environment:
      SSL_CERT: "/certs/localhost.crt"
      SSL_KEY: "/certs/localhost.key"
      MONGO_IP: "mongo"
  mongo:
    image: "mongo:4.4.17"
    environment:
      - AUTH=no
    container_name: mongo
    volumes:
      - mongodata:/data/db
    ports:
      - "27017:27017"
volumes:
  mongodata:
